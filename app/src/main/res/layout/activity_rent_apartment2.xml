<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="430dp"
            android:layout_height="83dp"
            android:background="#282626"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:text="Pacita Boarding and Rental"
                android:textColor="#FFFDFD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mainLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/mainLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:backgroundTint="#7C7C7C"
                android:text="Logout"
                app:cornerRadius="5dp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#3B8C68"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="299dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="10dp">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="161dp"
                            android:layout_height="148dp"
                            android:layout_weight="1"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/house_icon" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView28"
                            android:layout_width="match_parent"
                            android:layout_height="47dp"
                            android:fontFamily="@font/ardent_sans_book"
                            android:text="Submitting Rental Request"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/addressText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address:"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="13dp" />

                        <TextView
                            android:id="@+id/roomText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Room: "
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="14dp" />

                        <TextView
                            android:id="@+id/priceText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Price:"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="22dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView37"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#C3E3D5"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Enter Your Full Name: "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="62dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/fnameField"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:hint="First Name:"
                            android:inputType="text" />

                        <EditText
                            android:id="@+id/lnameField"
                            android:layout_width="213dp"
                            android:layout_height="62dp"
                            android:layout_weight="1"
                            android:background="@drawable/border"
                            android:ems="10"
                            android:hint="Last Name"
                            android:inputType="text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView38"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#C2E2D4"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Contact Number:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/contactNumField"
                        android:layout_width="match_parent"
                        android:layout_height="61dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Your Contact Number"
                        android:inputType="phone" />

                    <TextView
                        android:id="@+id/textView29"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#C1E1D3"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Birthdate:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/birthDateField"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="MM/DD/YYYY"
                        android:inputType="date" />

                    <TextView
                        android:id="@+id/textView41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#C0E0D2"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Occupation: "
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/occupationField"
                        android:layout_width="match_parent"
                        android:layout_height="67dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/border"
                        android:ems="10"
                        android:hint="Student, Woker, etc..."
                        android:inputType="text" />

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#BFDFD1"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Payment Method"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/bdoCheckBox"
                            android:layout_width="179dp"
                            android:layout_height="wrap_content"
                            android:text="BDO" />

                        <CheckBox
                            android:id="@+id/gcashCheckBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="GCash" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="27dp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#BEDED0"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Validation:"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="341dp"
                        android:layout_height="185dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:id="@+id/addID"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#DCDCDC">

                            <ImageView
                                android:id="@+id/IDImage"
                                android:layout_width="match_parent"
                                android:layout_height="185dp"
                                android:alpha="0.3"
                                android:scaleType="fitCenter"
                                app:srcCompat="@android:drawable/ic_menu_add" />

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20sp"
                        android:fontFamily="@font/ardent_sans_bold"
                        android:text="ID Validation"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="342dp"
                        android:layout_height="206dp"
                        android:layout_gravity="center"
                        app:cardBackgroundColor="#DBDBDB"
                        app:cardCornerRadius="10dp">

                        <FrameLayout
                            android:id="@+id/addPay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#DCDCDC">

                            <ImageView
                                android:id="@+id/paymentImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:alpha="0.3"
                                android:scaleType="fitCenter"
                                app:srcCompat="@android:drawable/ic_menu_add" />

                        </FrameLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/ardent_sans_bold"
                        android:text="Proof of Payment:"
                        android:textAlignment="center"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/payLaterCheck"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ardent_sans_bold"
                        android:text="Pay for Later"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/textView54"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_white_bg"
                        android:backgroundTint="#BDDDCF"
                        android:fontFamily="@font/ardent_sans_regular"
                        android:text="Others:"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/equipmentChecker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Include Equipments?"
                        android:textColor="#494949"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="20dp">

                        <LinearLayout
                            android:id="@+id/equipmentList"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="122dp"
                                android:layout_height="148dp"
                                android:alpha="0.8"
                                app:cardBackgroundColor="#CECECE"
                                app:cardCornerRadius="10dp"
                                app:cardElevation="2dp">

                                <ImageView
                                    android:id="@+id/addEquipImage"
                                    android:layout_width="95dp"
                                    android:layout_height="89dp"
                                    android:layout_gravity="center"
                                    android:alpha="0.6"
                                    android:scaleType="fitCenter"
                                    app:srcCompat="@android:drawable/ic_menu_add" />

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <CheckBox
                    android:id="@+id/termsCheck"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I have read the terms and conditions and ensure that the information given is correct" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/submitButton"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#659D51"
                        android:text="Submit"
                        app:cornerRadius="5dp" />

                    <Button
                        android:id="@+id/cancelButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:backgroundTint="#5A5A5A"
                        android:text="Cancel"
                        app:cornerRadius="5dp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>