<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="430dp"
            android:layout_height="83dp"
            android:background="#282626"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:text="Pacita Boarding and Rental"
                android:textColor="#FFFDFD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mainLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/mainLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:backgroundTint="#7C7C7C"
                android:text="Logout"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="#D8FFD9"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="228dp"
                    android:layout_height="226dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    app:cardCornerRadius="120dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/profile" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/userNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ardent_sans_bold"
                    android:text="Processing User's Account Balance:"
                    android:textAlignment="center"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#74A63A"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView76"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ardent_sans_bold"
                    android:text="Amount Paid:"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/amountPaidField"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/border_white_bg"
                    android:ems="10"
                    android:fontFamily="@font/ardent_sans_book"
                    android:hint="Amount"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/messageField"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:background="@drawable/border_white_bg"
                    android:ems="10"
                    android:fontFamily="@font/ardent_sans_book"
                    android:gravity="start|top"
                    android:hint="Message Tenant (Optional)"
                    android:inputType="textMultiLine" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/confirmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:backgroundTint="#4CAF50"
            android:text="Confirm"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#7C7C7C"
            android:text="Cancel"
            app:cornerRadius="5dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>