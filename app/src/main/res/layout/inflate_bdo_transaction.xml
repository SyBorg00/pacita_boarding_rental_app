<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="430dp"
            android:layout_height="83dp"
            android:background="#C1C1C1"
            android:backgroundTint="#0B2972"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:text="Pacita Boarding and Rental"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/mainLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/mainLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:backgroundTint="#FEB10C"
                android:text="Logout"
                app:cornerRadius="0dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="81dp"
            android:background="#0B2972"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/bdo_logo_transparent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="465dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/dateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: "
                android:textAlignment="viewEnd"
                android:textColor="#0B2972"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/textView43"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BDO ACCOUNT:"
                android:textColor="#0B2972"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/accountField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_square_transparent"
                android:ems="10"
                android:hint="BDO Account"
                android:inputType="text" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AMOUNT: "
                android:textColor="#0B2972"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/amountField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_square_transparent"
                android:ems="10"
                android:hint="0.00"
                android:inputType="numberDecimal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <TextView
                android:id="@+id/textView46"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MESSAGE (Optional): "
                android:textColor="#0B2972"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/messageField"
                android:layout_width="match_parent"
                android:layout_height="209dp"
                android:background="@drawable/border_square_transparent"
                android:ems="10"
                android:inputType="textMultiLine" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#0B2972"
                android:text="Submit" />

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#0B2972"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>