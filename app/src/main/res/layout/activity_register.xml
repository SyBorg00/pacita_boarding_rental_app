<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:padding="80dp">

        <ImageView
            android:id="@+id/registerLogo"
            android:layout_width="match_parent"
            android:layout_height="215dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/main_logo"
            tools:srcCompat="@drawable/main_logo" />

        <EditText
            android:id="@+id/registerDisplayNameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Display Name"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/registerPhotoUrlET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Photo Url"
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/registerEmailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/registerPasswordET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/registerAndLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5A5A5A"
            android:text="Register &amp; Login"
            app:cornerRadius="5dp" />

        <Button
            android:id="@+id/registerBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#5A5A5A"
            android:text="Back"
            app:cornerRadius="5dp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>