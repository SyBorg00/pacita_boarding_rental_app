<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout15"
            android:layout_width="430dp"
            android:layout_height="83dp"
            android:background="#282626"
            android:gravity="start"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:paddingRight="15dp"
                android:text="Pacita Boarding and Rental"
                android:textColor="#FFFDFD"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mainLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/mainLogoutButton"
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:backgroundTint="#7C7C7C"
                android:text="Logout"
                app:cornerRadius="1dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="554dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="201dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/apartmentImage"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/room" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:background="#7BBD57"
                    android:backgroundTint="#7BBC57"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/rentalText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/ardent_sans_bold"
                        android:text="Address"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="28sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView74"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ardent_sans_bold"
                            android:text="Current Due Date:"
                            android:textColor="#E4E4E4"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/dueDateText"
                            android:layout_width="match_parent"
                            android:layout_height="41dp"
                            android:layout_weight="1"
                            android:text="01/01/1001"
                            android:textAlignment="textEnd"
                            android:textColor="#E3E3E3"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView85"
                            android:layout_width="204dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/ardent_sans_bold"
                            android:text="Current Outstanding Balance:"
                            android:textColor="#EFEFEF"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/outstandingBalanceText"
                            android:layout_width="136dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="PHP 0.00"
                            android:textAlignment="textEnd"
                            android:textColor="#E6E6E6"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView94"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/ardent_sans_bold"
                    android:text="Click to View In Details:"
                    android:textColor="#717171" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/contractIcon"
                        android:layout_width="107dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView120"
                            android:layout_width="match_parent"
                            android:layout_height="55dp"
                            android:backgroundTint="#7BBB57"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />

                        <TextView
                            android:id="@+id/textView92"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ardent_sans_book"
                            android:text="Contract Details"
                            android:textAlignment="center"
                            android:textColor="#717171" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/SOAIcon"
                        android:layout_width="95dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/SOAImage"
                            android:layout_width="match_parent"
                            android:layout_height="52dp"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />

                        <TextView
                            android:id="@+id/textView100"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/ardent_sans_book"
                            android:text="Statement of Account"
                            android:textAlignment="center"
                            android:textColor="#717171" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/paymentIcon"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/paymentImage"
                            android:layout_width="match_parent"
                            android:layout_height="54dp"
                            app:srcCompat="@android:drawable/ic_menu_info_details" />

                        <TextView
                            android:id="@+id/textView93"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ardent_sans_book"
                            android:text="Payment History"
                            android:textAlignment="center"
                            android:textColor="#717171" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#5A5A5A"
            android:text="Back"
            app:cornerRadius="6dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>